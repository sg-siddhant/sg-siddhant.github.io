<!DOCTYPE html> <html> <head> <title>Corrugated Box Paper Requirements Calculator</title> <script> function calculatePaperRequirements() { var productCode = document.getElementById("productCode").value; var boxName = document.getElementById("boxName").value; var lengthValue = parseFloat(document.getElementById("length").value); var lengthUnit = document.getElementById("lengthUnit").value; var widthValue = parseFloat(document.getElementById("width").value); var widthUnit = document.getElementById("widthUnit").value; var numberOfBoxes = parseInt(document.getElementById("numberOfBoxes").value); var ply = parseInt(document.getElementById("ply").value); var boxPerSheet = parseInt(document.getElementById("boxPerSheet").value);

var topPaperType = document.getElementById("topPaperType").value;
        var topPaperGSM = parseFloat(document.getElementById("topPaperGSM").value);
        var topPaperBF = parseFloat(document.getElementById("topPaperBF").value);
        var topPaperShade = document.getElementById("topPaperShade").value;
        
        var flutePaperType = document.getElementById("flutePaperType").value;
        var flutePaperGSM = parseFloat(document.getElementById("flutePaperGSM").value);
        var flutePaperBF = parseFloat(document.getElementById("flutePaperBF").value);
        var flutePaperShade = document.getElementById("flutePaperShade").value;
        
        var linPaperType = document.getElementById("linPaperType").value;
        var linPaperGSM = parseFloat(document.getElementById("linPaperGSM").value);
        var linPaperBF = parseFloat(document.getElementById("linPaperBF").value);
        var linPaperShade = document.getElementById("linPaperShade").value;

        var length = convertToMM(lengthValue, lengthUnit);
        var width = convertToMM(widthValue, widthUnit);

        var topPaperWeightPerBox = ((((length * width) / 1000000) * topPaperGSM) / boxPerSheet).toFixed(3);
        var flutePaperWeightPerBox = (ply === 3) ? ((((length * width) / 1000000) * flutePaperGSM * 1.5) / boxPerSheet).toFixed(3) : ((((length * width) / 1000000) * flutePaperGSM * 1.5) / boxPerSheet * 2).toFixed(3);
        var linPaperWeightPerBox = (ply === 3) ? ((((length * width) / 1000000) * linPaperGSM) / boxPerSheet).toFixed(3) : ((((length * width) / 1000000) * linPaperGSM) / boxPerSheet * 2).toFixed(3);

        var totalPaperWeightPerBox = (parseFloat(topPaperWeightPerBox) + parseFloat(flutePaperWeightPerBox) + parseFloat(linPaperWeightPerBox)).toFixed(3);
        var totalPaperWeightRequired = (totalPaperWeightPerBox * numberOfBoxes).toFixed(3);

        var boxArea = (length * width) / 1000000;
        var totalPaperAreaRequired = (boxArea * numberOfBoxes).toFixed(2);

        var resultText = "<strong>Product Code:</strong> " + productCode + "<br>" +
            "<strong>Box Name:</strong> " + boxName + "<br><br>" +
            "<strong>Paper Requirements:</strong><br>" +
            "Top Paper - Type: " + topPaperType + ", GSM: " + topPaperGSM + ", BF: " + topPaperBF + ", Shade: " + topPaperShade + "<br>" +
            "Flute Paper - Type: " + flutePaperType + ", GSM: " + flutePaperGSM + ", BF: " + flutePaperBF + ", Shade: " + flutePaperShade + "<br>" +
            "Lin Paper - Type: " + linPaperType + ", GSM: " + linPaperGSM + ", BF: " + linPaperBF + ", Shade: " + linPaperShade + "<br><br>" +
            "Top Paper Weight Per Box: " + topPaperWeightPerBox + " kg<br>" +
            "Flute Paper Weight Per Box: " + flutePaperWeightPerBox + " kg<br>" +
            "Lin Paper Weight Per Box: " + linPaperWeightPerBox + " kg<br>" +
            "Total Paper Weight Per Box: " + totalPaperWeightPerBox + " kg<br>" +
            "Total Paper Weight Required: " + totalPaperWeightRequired + " kg<br>" +
            "Total Paper Area Required: " + totalPaperAreaRequired + " sq. meters";

        document.getElementById("result").innerHTML = resultText;
    }

    function convertToMM(value, unit) {
        switch (unit) {
            case "cm":
                return value * 10;
            case "inch":
                return value * 25.4;
            case "mm":
            default:
                return value;
        }
    }
</script>

